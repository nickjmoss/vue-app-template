{
    "name": "vue-app-template-backend",
    "private": true,
    "version": "0.0.0",
    "main": "index.js",
    "scripts": {
        "start": "bun --watch index.ts",
        "start:prod": "bunx pm2-runtime start --name vue-app-template --interpreter /usr/local/bin/bun index.js",
        "build": "tsc",
        "build:test": "tsv --noEmit",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "prisma:generate": "prisma generate",
        "prisma:migrate": "prisma migrate dev"
    },
    "devDependencies": {
        "@nickjmoss/eslint-config-backend": "^1.0.1",
        "pino-pretty": "^13.0.0",
        "ts-node-dev": "^2.0.0",
        "tsconfig-paths": "^4.2.0"
    },
    "dependencies": {
        "@fastify/cors": "^10.0.2",
        "@fastify/static": "^8.1.0",
        "@prisma/client": "^6.3.1",
        "cors": "^2.8.5",
        "fastify": "^5.2.1",
        "pm2": "^5.4.3",
        "prisma": "^6.3.1"
    }
}
