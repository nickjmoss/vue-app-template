{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"rootDir": "./",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": false,
		"baseUrl": ".",
		"outDir": "../../dist/server-build",
		"paths": {
			"@controllers/*": ["./controllers/*"],
			"@routes/*": ["./routes/*"]
		}
	},
	"include": [
		"./**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}